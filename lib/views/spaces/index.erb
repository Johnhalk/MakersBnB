<div class="container">

  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <% if !current_user %>
        <div class= "signin-form">
          <form class="form-inline" action="/sessions" method="post">
            <div class="form-group">
              <label class="sr-only" for="email"> Email Address</label>
                <input type="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="form-group">
              <label class="sr-only" for="password"> Password</label>
              <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
            <br>
              <button type="submit" class="btn btn-lg btn-block" id="signin-button" value="Sign in"> Sign in</button>
          </form>
        </div>
      <% end %>
    </div>
  </div>


</div>

  <div class="row">
    <div class=class="col-md-12">
    <div class ="jumbotron" id="jumbotron2">
      <div id="spaces-title">
        <h3> These are the spaces you can rent: </h3>
      </div>

        <ul id='all spaces'>
          <% @spaces.each do |space| %>
          <li>
            <%= space.name %>
            <br>
            <%= space.description %>
            <br>
            <%= space.price %>
          </li>
          <br>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>





