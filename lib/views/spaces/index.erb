<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <% if !current_user %>
        <div class= "signin-form">
          <form class="form-inline" action="/sessions" method="post">
            <div class="form-group">
              <label class="sr-only" for="email"> Email Address</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="form-group">
              <label class="sr-only" for="password"> Password</label>
              <input type="password" name="password" class="form-control" id="signin-password" placeholder="Password">
            </div>
            <br>
            <%= partial :flash %>
              <button type="submit" class="btn btn-lg" id="signin-button" value="Sign in"> Sign in</button>
          </form>
        </div>

      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div id="spaces-title"><h4> Homes </h4></div>
  <div class="row">
    <div class=class="col-md-12">
      <div id="spaces-title"></div>
      <!-- <div class="col-4"> -->
      <div class="card-deck">
        <% @spaces.each do |space| %>
          <div class="card">
            <img class="card-img-top" src="http://i.imgur.com/cujYuIh.jpg" alt="Card image cap" style="width:350px; height:243px; vertical-align:middle; display:inline;">
            <div class="card-block">
              <h4 class="card-title"><%= space.name %></h4>
              <p class="card-text"><%= space.description %></p>
              <p class="card-text"><small class="text-muted">Â£<%= space.price %> per night</small></p>
            </div>
            <% if current_user %>
                <form class="rent-form" action='/spaces/rent' method="post">
                  <label for="request_date">Date:</label>
                  <input type="date" name="request_date">
                  <br>
                  <button type="submit" class="btn btn-lg" id="rent-button" name="rented_space_id" value="<%= space.id %>">Request Space</button>
                </form>
            <% end %>
          </div>
        <% end %>
    </div>
    </div>
  </div>
</div>
