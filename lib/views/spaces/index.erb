<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <% if !current_user %>
        <div class= "signin-form">
          <form class="form-inline" action="/sessions" method="post">
            <div class="form-group">
              <label class="sr-only" for="email"> Email Address</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="form-group">
              <label class="sr-only" for="password"> Password</label>
              <input type="password" name="password" class="form-control" id="signin-password" placeholder="Password">
            </div>
            <br>
            <%= partial :flash %>
              <button type="submit" class="btn btn-lg" id="signin-button" value="Sign in"> Sign in</button>
          </form>
        </div>

      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div id="spaces-title"><h4> These are the spaces you can rent: </h4></div>
  <div class="row">
    <div class=class="col-md-12">
      <div id="spaces-title"></div>
        <ul id='all spaces'>
        <% @spaces.each do |space| %>
         <div class=class="col-md-4">
            <dl>
              <dt><%= space.name %></dt>
              <dd><%= space.description %></dd>
              <dd><%= space.price %></dd>
              <% if current_user && !space.rented? %>
                <form id="Click to rent" action='/spaces/rent' method="post">
                  <button type="submit" name="rented_space_id" value="<%= space.id %>">Rent</button>
                </form>
              <% elsif current_user && space.rented? %>
                This space is rented!
              <% end %>
            </dl>
          </div>
          <% end %>
        </ul>
    </div>
  </div>
</div>
