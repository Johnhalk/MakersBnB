<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title> MakersBnB </title>
  </head>
  <body>

    <% if current_user %>
    <div>
      Welcome, <%= current_user.username %>!
    </div>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
    <div>
      <ul id='errors'>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
